<%- include('partials/header', { title: event.id ? 'Modifier l\'événement' : 'Nouvel événement' }) %>

<main class="bg-gray-50 min-h-screen py-12 md:py-20 flex items-center justify-center px-4">
    <div class="max-w-5xl w-full bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">
        
        <!-- Sidebar / Context info (Desktop only) -->
        <div class="hidden md:flex md:w-1/3 bg-slate-900 text-white p-10 relative flex-col justify-between">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10 pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
            
            <div class="relative z-10">
                <h3 class="text-2xl font-bold mb-6 text-blue-400 border-b border-white/10 pb-4">Administration</h3>
                <p class="text-slate-300 leading-relaxed mb-8 font-light text-sm">
                    Ajoutez ou modifiez les événements de l'église. Ces informations seront visibles publiquement sur la page Agenda.
                </p>
                
                <div class="space-y-6">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-blue-400">
                            <i class="ph-fill ph-text-t text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Titre clair</h4>
                            <p class="text-xs text-slate-400 mt-1">Soyez concis et accrocheur.</p>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-green-400">
                            <i class="ph-fill ph-image text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Visuel Fort</h4>
                            <p class="text-xs text-slate-400 mt-1">Une image vaut mille mots.</p>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-yellow-400">
                            <i class="ph-fill ph-clock text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Exactitude</h4>
                            <p class="text-xs text-slate-400 mt-1">Vérifiez vos horaires.</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="relative z-10 mt-12 pt-6 border-t border-white/10 hover:text-white group">
                <a href="/events" class="inline-flex items-center gap-2 text-slate-400 group-hover:text-blue-300 transition text-sm font-medium">
                    <i class="ph-bold ph-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <div class="w-full md:w-2/3 p-8 md:p-12 overflow-y-auto max-h-[90vh]">
            <div class="mb-10 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-slate-800">
                        <%= event.id ? 'Modifier l\'événement' : 'Nouvel événement' %>
                    </h2>
                    <p class="text-sm text-slate-500 mt-1">Remplissez les détails ci-dessous.</p>
                </div>
                <!-- Status Badge -->
                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider <%= event.id ? 'bg-blue-100 text-blue-700' : 'bg-green-100 text-green-700' %>">
                    <%= event.id ? 'Édition' : 'Création' %>
                </span>
            </div>
            
            <form action="<%= event.id ? '/events/update/' + event.id : '/events/create' %>" method="POST" class="space-y-8">
                
                <!-- Section 1: Quoi -->
                <div class="space-y-5">
                    <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest border-b border-slate-100 pb-2 flex items-center gap-2">
                        <i class="ph-fill ph-info text-blue-500"></i> Informations Générales
                    </h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <!-- Titre -->
                        <div class="md:col-span-2">
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Titre de l'événement</label>
                            <div class="relative group">
                                <input type="text" name="title" value="<%= event.title || '' %>" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition font-medium text-slate-700" placeholder="Ex: Soirée de Louange" required>
                                <i class="ph-bold ph-text-t absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                            </div>
                        </div>

                        <!-- Catégorie -->
                        <div class="md:col-span-1">
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Catégorie</label>
                            <div class="relative group">
                                <select name="category" class="w-full pl-10 pr-10 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition appearance-none cursor-pointer text-sm font-medium text-slate-700">
                                    <option value="Culte" <%= event.category === 'Culte' ? 'selected' : '' %>>Culte</option>
                                    <option value="Conférence" <%= event.category === 'Conférence' ? 'selected' : '' %>>Conférence</option>
                                    <option value="Musique" <%= event.category === 'Musique' ? 'selected' : '' %>>Musique</option>
                                    <option value="Communauté" <%= event.category === 'Communauté' ? 'selected' : '' %>>Communauté</option>
                                    <option value="Jeunesse" <%= event.category === 'Jeunesse' ? 'selected' : '' %>>Jeunesse</option>
                                    <option value="Autre" <%= event.category === 'Autre' ? 'selected' : '' %>>Autre</option>
                                </select>
                                <i class="ph-bold ph-tag absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                                <i class="ph-bold ph-caret-down absolute right-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 pointer-events-none text-xs"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 2: Quand & Où -->
                <div class="space-y-5">
                    <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest border-b border-slate-100 pb-2 flex items-center gap-2">
                        <i class="ph-fill ph-map-pin text-red-500"></i> Logistique
                    </h4>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <!-- Date -->
                        <div class="md:col-span-1">
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Date et Heure</label>
                            <% 
                                let dateValue = '';
                                if (event.date_event) {
                                    const d = new Date(event.date_event);
                                    d.setMinutes(d.getMinutes() - d.getTimezoneOffset());
                                    dateValue = d.toISOString().slice(0, 16);
                                }
                            %>
                            <div class="relative group">
                                <input type="datetime-local" name="date_event" value="<%= dateValue %>" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition text-sm font-medium text-slate-600" required>
                                <i class="ph-bold ph-calendar-blank absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                            </div>
                        </div>

                        <!-- Lieu -->
                        <div class="md:col-span-1">
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Lieu</label>
                            <div class="relative group">
                                <input type="text" name="location" value="<%= event.location || '' %>" placeholder="Ex: Grande Salle" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition text-sm font-medium text-slate-700" required>
                                <i class="ph-bold ph-map-pin absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 3: Médias -->
                <div class="space-y-5">
                    <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest border-b border-slate-100 pb-2 flex items-center gap-2">
                        <i class="ph-fill ph-image text-purple-500"></i> Médias & Détails
                    </h4>

                    <!-- URL Image -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Image de couverture (URL)</label>
                        <div class="flex gap-2">
                            <div class="relative flex-grow group">
                                <input type="url" id="image_url" name="image_url" value="<%= event.image_url || '' %>" placeholder="https://..." class="w-full pl-10 pr-12 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition text-sm font-medium text-slate-700">
                                <i class="ph-bold ph-link absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                                
                                <!-- Tooltip helper inside input -->
                                <button type="button" id="preview-btn" class="absolute right-2 top-1/2 transform -translate-y-1/2 p-1.5 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition" title="Charger l'aperçu">
                                    <i class="ph-bold ph-eye"></i>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Preview Zone (Javascript controlled) -->
                        <div id="image-preview" class="mt-4 hidden animate-fade-in relative w-full h-48 rounded-xl overflow-hidden shadow-inner border border-slate-200 bg-slate-100 group">
                             <img src="" alt="Aperçu" class="w-full h-full object-cover transition transform duration-700 group-hover:scale-105">
                             <div class="absolute top-2 right-2 bg-black/60 text-white text-xs font-bold px-2 py-1 rounded backdrop-blur-sm">Aperçu</div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Description complète</label>
                        <div class="relative group">
                            <textarea name="description" rows="5" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition text-sm font-medium text-slate-700 resize-y" placeholder="Décrivez l'événement en détail..." required><%= event.description || '' %></textarea>
                            <div class="absolute bottom-2 right-2 pointer-events-none">
                                <i class="ph-fill ph-pencil-simple-slash text-slate-300 text-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Actions Footer -->
                <div class="flex items-center justify-end gap-3 pt-6 border-t border-slate-100 mt-8">
                    <a href="/events" class="px-6 py-3 rounded-xl text-slate-500 font-semibold text-sm hover:bg-slate-50 hover:text-slate-800 transition">
                        Annuler
                    </a>
                    <button type="submit" class="px-8 py-3 bg-primary hover:bg-blue-700 text-white rounded-xl font-bold text-sm shadow-lg shadow-blue-500/30 hover:shadow-blue-500/40 transition transform hover:-translate-y-0.5 flex items-center gap-2">
                        <i class="ph-bold <%= event.id ? 'ph-floppy-disk' : 'ph-paper-plane-right' %>"></i>
                        <%= event.id ? 'Sauvegarder les modifications' : 'Publier l\'événement' %>
                    </button>
                </div>

            </form>
        </div>
    </div>
</main>

<script>
    // Script d'aperçu d'image
    const urlInput = document.getElementById('image_url');
    const previewBox = document.getElementById('image-preview');
    const previewImg = previewBox.querySelector('img');
    const previewBtn = document.getElementById('preview-btn');

    function updatePreview() {
        const url = urlInput.value.trim();
        if (url) {
            previewImg.src = url;
            previewImg.onload = function() {
                previewBox.classList.remove('hidden');
                previewBox.classList.add('block');
            };
            previewImg.onerror = function() {
                previewBox.classList.add('hidden');
                previewBox.classList.remove('block');
                // Optionnel: Feedback visuel d'erreur
            };
        } else {
            previewBox.classList.add('hidden');
            previewBox.classList.remove('block');
        }
    }

    // Load on start if value exists
    if(urlInput.value) updatePreview();

    previewBtn.addEventListener('click', updatePreview);
    urlInput.addEventListener('change', updatePreview); // Aussi au changement/perte de focus
    urlInput.addEventListener('blur', updatePreview);
</script>

<%- include('partials/footer') %>
