<%- include('partials/header', { title: 'Messagerie Admin' }) %>

<main class="bg-gray-50 min-h-screen py-12 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-slate-800">Boîte de réception</h1>
                <p class="text-slate-500 mt-1">Gérez les messages reçus depuis le formulaire de contact.</p>
            </div>
            <a href="/contact" class="flex items-center gap-2 text-slate-600 hover:text-accent transition font-medium">
                <i class="ph-bold ph-arrow-left"></i> Retour au site
            </a>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 border-b border-slate-200 text-slate-500 text-xs uppercase tracking-wider">
                            <th class="px-6 py-4 font-semibold">Date</th>
                            <th class="px-6 py-4 font-semibold">Expéditeur</th>
                            <th class="px-6 py-4 font-semibold">Sujet</th>
                            <th class="px-6 py-4 font-semibold">Message</th>
                            <th class="px-6 py-4 font-semibold text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        <% if (messages && messages.length > 0) { %>
                            <% messages.forEach(function(msg) { %>
                                <tr class="hover:bg-slate-50 transition group <%= !msg.read ? 'bg-blue-50/30' : '' %>">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                        <div class="flex items-center gap-2">
                                            <% if (!msg.read) { %>
                                                <span class="w-2 h-2 rounded-full bg-accent" title="Non lu"></span>
                                            <% } %>
                                            <%= new Date(msg.created_at).toLocaleDateString('fr-CA', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' }) %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="font-medium text-slate-800"><%= msg.first_name %> <%= msg.last_name %></div>
                                        <div class="text-xs text-slate-400"><%= msg.email %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
                                            <%= msg.subject %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-sm text-slate-600 line-clamp-2 max-w-md" title="<%= msg.message %>">
                                            <%= msg.message %>
                                        </p>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex items-center justify-end gap-2 opacity-100 sm:opacity-0 group-hover:opacity-100 transition">
                                            <!-- View Detail -->
                                            <a href="/admin/messages/<%= msg.id %>" 
                                               class="text-slate-400 hover:text-blue-600 p-2 hover:bg-blue-50 rounded-full transition" 
                                               title="Voir le message">
                                                <i class="ph-bold ph-eye text-lg"></i>
                                            </a>

                                            <!-- Reply (Mailto) -->
                                            <a href="mailto:<%= msg.email %>?subject=Re: <%= msg.subject %>&body=Bonjour <%= msg.first_name %>," 
                                               class="text-blue-600 hover:text-blue-800 p-2 hover:bg-blue-50 rounded-full transition" 
                                               title="Répondre par email">
                                                <i class="ph-bold ph-envelope-simple-open text-lg"></i>
                                            </a>
                                            
                                            <!-- Mark as Read / Toggle -->
                                            <form action="/admin/messages/toggle-read/<%= msg.id %>" method="POST" class="inline">
                                                <button type="submit" class="text-slate-400 hover:text-accent p-2 hover:bg-amber-50 rounded-full transition" title="<%= msg.read ? 'Marquer comme non lu' : 'Marquer comme lu' %>">
                                                    <i class="ph-bold <%= msg.read ? 'ph-check-circle' : 'ph-circle' %> text-lg"></i>
                                                </button>
                                            </form>

                                            <!-- Delete -->
                                            <form action="/admin/messages/delete/<%= msg.id %>" method="POST" onsubmit="return confirm('Supprimer ce message ?');" class="inline">
                                                <button type="submit" class="text-slate-400 hover:text-red-600 p-2 hover:bg-red-50 rounded-full transition" title="Supprimer">
                                                    <i class="ph-bold ph-trash text-lg"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-slate-500">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-300">
                                            <i class="ph-fill ph-inbox text-3xl"></i>
                                        </div>
                                        <p>Aucun message reçu pour le moment.</p>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <!-- Footer Pagination (Optional Placeholder) -->
            <% if (messages && messages.length > 0) { %>
            <div class="bg-slate-50 px-6 py-4 border-t border-slate-200 flex items-center justify-between">
                <span class="text-sm text-slate-500">Affichage des derniers messages</span>
                <!-- Pagination could go here -->
            </div>
            <% } %>
        </div>
    </div>
</main>

<%- include('partials/footer') %>