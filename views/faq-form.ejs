<%- include('partials/header', { title: faq.id ? 'Modifier la question' : 'Nouvelle question' }) %>

<main class="bg-gray-50 min-h-screen py-12 md:py-20 flex items-center justify-center px-4">
    <div class="max-w-5xl w-full bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">
        
        <!-- Sidebar / Context info (Desktop only) -->
        <div class="hidden md:flex md:w-1/3 bg-slate-900 text-white p-10 relative flex-col justify-between">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10 pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
            
            <div class="relative z-10">
                <h3 class="text-2xl font-bold mb-6 text-indigo-400 border-b border-white/10 pb-4">Administration</h3>
                <p class="text-slate-300 leading-relaxed mb-8 font-light text-sm">
                    Gérez la section "Infos Pratiques" (FAQ). Répondez aux questions courantes des visiteurs.
                </p>
                
                <div class="space-y-6">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-indigo-400">
                            <i class="ph-fill ph-question text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Question Claire</h4>
                            <p class="text-xs text-slate-400 mt-1">Court et précis.</p>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-emerald-400">
                            <i class="ph-fill ph-check-circle text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Réponse Utile</h4>
                            <p class="text-xs text-slate-400 mt-1">Donnez les informations essentielles.</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="relative z-10 mt-12 pt-6 border-t border-white/10 hover:text-white group">
                <a href="/contact" class="inline-flex items-center gap-2 text-slate-400 group-hover:text-indigo-300 transition text-sm font-medium">
                    <i class="ph-bold ph-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour au Contact
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <div class="w-full md:w-2/3 p-8 md:p-12 overflow-y-auto max-h-[90vh]">
            <div class="mb-10 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-slate-800">
                        <%= faq.id ? 'Modifier la question' : 'Nouvelle question' %>
                    </h2>
                    <p class="text-slate-500 text-sm mt-1">Infos Pratiques / FAQ</p>
                </div>
                <% if (faq.id) { %>
                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">Mode Édition</span>
                <% } else { %>
                    <span class="bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">Mode Création</span>
                <% } %>
            </div>

            <form action="<%= faq.id ? '/faqs/update/' + faq.id : '/faqs/create' %>" method="POST" class="space-y-6">
                
                <!-- Question -->
                <div>
                    <label for="question" class="block text-sm font-medium text-slate-700 mb-2">Question</label>
                    <input type="text" id="question" name="question" required
                           value="<%= faq.question || '' %>"
                           class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition shadow-sm placeholder-slate-400"
                           placeholder="Ex: À quelle heure commence le culte ?">
                </div>

                <!-- Réponse -->
                <div>
                    <label for="answer" class="block text-sm font-medium text-slate-700 mb-2">Réponse</label>
                    <textarea id="answer" name="answer" required rows="5"
                              class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition shadow-sm placeholder-slate-400"
                              placeholder="Ex: Le culte commence tous les dimanches à 10h00..."><%= faq.answer || '' %></textarea>
                </div>

                <!-- Ordre d'affichage -->
                <div>
                    <label for="display_order" class="block text-sm font-medium text-slate-700 mb-2">Ordre d'affichage (Optionnel)</label>
                    <div class="relative w-32">
                        <input type="number" id="display_order" name="display_order"
                               value="<%= faq.display_order || 0 %>"
                               class="w-full pl-4 pr-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition shadow-sm">
                    </div>
                    <p class="text-xs text-slate-500 mt-1">Plus le chiffre est petit, plus la question apparaît haut.</p>
                </div>

                <!-- Submit Button -->
                <div class="pt-6 border-t border-slate-100 flex items-center justify-end gap-4">
                    <a href="/contact" class="px-6 py-3 rounded-lg text-slate-600 hover:bg-slate-100 font-medium transition">Annuler</a>
                    <button type="submit" class="px-8 py-3 rounded-lg bg-indigo-600 text-white font-bold hover:bg-indigo-700 shadow-lg shadow-indigo-200 transition transform hover:-translate-y-0.5 flex items-center gap-2">
                        <i class="ph-bold ph-check"></i>
                        <%= faq.id ? 'Mettre à jour' : 'Enregistrer' %>
                    </button>
                </div>

            </form>
        </div>
    </div>
</main>

<%- include('partials/footer') %>