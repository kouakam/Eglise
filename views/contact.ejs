<%- include('partials/header', { title: 'Contact' }) %>

    <!-- HEADER PAGE -->
    <header class="bg-primary/95 pt-32 pb-20 text-center text-white relative">
        <div class="absolute inset-0 z-[-1] bg-slate-900 opacity-90"></div> <!-- Placeholder background -->
        <div class="max-w-4xl mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Nous Contacter</h1>
            <p class="text-xl text-slate-300">Une question ? Besoin d'aide ? N'hésitez pas.</p>
        </div>
    </header>

    <!-- INFO & FORMULAIRE -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                
                <!-- Informations -->
                <div>
                    <h2 class="text-2xl font-bold text-primary mb-6">Restons connectés</h2>
                    <p class="text-slate-600 mb-8 leading-relaxed">
                        Que vous cherchiez un endroit pour célébrer, que vous ayez besoin de prière ou simplement d'informations pratiques, notre équipe est là pour vous.
                    </p>

                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-accent text-2xl flex-shrink-0">
                                <i class="ph-fill ph-map-pin"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg text-primary">Adresse</h3>
                                <p class="text-slate-600">2620 Rue Darveau<br>Québec (QC) G1P 3V5</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-accent text-2xl flex-shrink-0">
                                <i class="ph-fill ph-envelope"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg text-primary">Courriel</h3>
                                <a href="mailto:info@egliseduberger.org" class="text-slate-600 hover:text-accent font-medium">info@egliseduberger.org</a>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-accent text-2xl flex-shrink-0">
                                <i class="ph-fill ph-phone"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg text-primary">Téléphone</h3>
                                <p class="text-slate-600">(418) 265-1718</p>
                                <p class="text-xs text-slate-400 mt-1">Du lundi au vendredi, 9h à 16h.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Carte interactive (Lien Google Maps) -->
                    <a href="https://www.google.com/maps/search/?api=1&query=2620+Rue+Darveau+Qu%C3%A9bec+QC+G1P+3V5" target="_blank" class="block mt-8 rounded-xl overflow-hidden shadow-md h-64 bg-slate-200 relative group cursor-pointer">
                        <img src="https://images.unsplash.com/photo-1569336415962-a4bd9f69cd83?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Carte" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition">
                         <div class="absolute inset-0 flex items-center justify-center">
                            <span class="bg-white px-4 py-2 rounded-full shadow-lg text-sm font-bold text-primary flex items-center gap-2 group-hover:text-accent transition">
                                <i class="ph-bold ph-map-trifold"></i> Voir sur Google Maps
                            </span>
                        </div>
                    </a>
                </div>

                <!-- Formulaire -->
                <div class="bg-slate-50 p-8 rounded-2xl shadow-sm border border-slate-100">
                    <h2 class="text-2xl font-bold text-primary mb-6">Envoyez-nous un message</h2>
                    <% if (typeof success !== 'undefined' && success) { %>
                        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                            <strong class="font-bold">Message envoyé !</strong>
                            <span class="block sm:inline">Nous vous répondrons dans les plus brefs délais.</span>
                        </div>
                    <% } %>
                    <form action="/contact/send" method="POST" class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label for="prenom" class="block text-sm font-medium text-slate-700 mb-1">Prénom</label>
                                <input type="text" id="prenom" name="prenom" required class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition" placeholder="Votre prénom">
                            </div>
                            <div>
                                <label for="nom" class="block text-sm font-medium text-slate-700 mb-1">Nom</label>
                                <input type="text" id="nom" name="nom" required class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition" placeholder="Votre nom">
                            </div>
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-slate-700 mb-1">Email</label>
                            <input type="email" id="email" name="email" required class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition" placeholder="votre@email.com">
                        </div>

                        <div>
                            <label for="sujet" class="block text-sm font-medium text-slate-700 mb-1">Sujet</label>
                            <select id="sujet" name="sujet" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition bg-white">
                                <option value="Nouveau">Je suis nouveau / nouvelle</option>
                                <option value="Prière">Demande de prière</option>
                                <option value="Ministères">Question sur les ministères</option>
                                <option value="Autre">Autre</option>
                            </select>
                        </div>

                        <div>
                            <label for="message" class="block text-sm font-medium text-slate-700 mb-1">Message</label>
                            <textarea id="message" name="message" required rows="4" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:border-accent focus:ring-1 focus:ring-accent outline-none transition" placeholder="Comment pouvons-nous vous aider ?"></textarea>
                        </div>

                        <button type="submit" class="w-full bg-accent hover:bg-accentHover text-white font-bold py-3 rounded-lg shadow-md transition flex items-center justify-center gap-2">
                            Envoyer le message <i class="ph-bold ph-paper-plane-tilt"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </section>

    <!-- FAQ -->
    <section class="py-16 bg-light border-t border-slate-200">
         <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-center gap-4 mb-10">
                <h2 class="text-3xl font-bold text-primary">Questions Fréquentes</h2>
                <% if (locals.user && locals.user.role === 'admin') { %>
                    <a href="/faqs/create" class="bg-indigo-600 text-white p-2 rounded-full hover:bg-indigo-700 transition shadow-md" title="Ajouter une question">
                        <i class="ph-bold ph-plus"></i>
                    </a>
                <% } %>
            </div>
            
            <div class="space-y-4">
                <% if (faqs && faqs.length > 0) { %>
                    <% faqs.forEach(function(faq) { %>
                    <div class="relative group-container"> <!-- Wrapper for positioning -->
                        <details class="group bg-white p-6 rounded-xl shadow-sm border border-slate-100 cursor-pointer">
                            <summary class="flex justify-between items-center font-medium text-lg list-none">
                                <span class="pr-12"><%= faq.question %></span>
                                <span class="transition group-open:rotate-180 text-slate-400"><i class="ph-bold ph-caret-down"></i></span>
                            </summary>
                            <div class="mt-4 text-slate-600 leading-relaxed pr-8">
                                <%- faq.answer.replace(/\n/g, '<br>') %>
                            </div>
                        </details>
                        
                        <% if (locals.user && locals.user.role === 'admin') { %>
                            <div class="absolute top-6 right-12 flex gap-2 z-10">
                                <a href="/faqs/edit/<%= faq.id %>" class="text-blue-600 hover:text-blue-800 p-1 bg-blue-50 hover:bg-blue-100 rounded transition" title="Modifier">
                                    <i class="ph-bold ph-pencil-simple"></i>
                                </a>
                                <form action="/faqs/delete/<%= faq.id %>" method="POST" onsubmit="return confirm('Supprimer cette question ?');" class="inline">
                                    <button type="submit" class="text-red-600 hover:text-red-800 p-1 bg-red-50 hover:bg-red-100 rounded transition" title="Supprimer">
                                        <i class="ph-bold ph-trash"></i>
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-8 bg-white rounded-xl border border-dashed border-slate-300">
                        <p class="text-slate-500 mb-2">Aucune question pour le moment.</p>
                        <% if (locals.user && locals.user.role === 'admin') { %>
                            <a href="/faqs/create" class="text-indigo-600 font-medium hover:underline">Ajouter la première question</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
         </div>
    </section>

<%- include('partials/footer') %>
