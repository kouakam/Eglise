<%- include('partials/header', { title: ministry.id ? 'Modifier le Ministère' : 'Nouveau Ministère' }) %>

<main class="bg-gray-50 min-h-screen py-12 md:py-20 flex items-center justify-center px-4">
    <div class="max-w-5xl w-full bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">
        
        <!-- Sidebar / Context info (Desktop only) -->
        <div class="hidden md:flex md:w-1/3 bg-slate-900 text-white p-10 relative flex-col justify-between">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10 pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
            
            <div class="relative z-10">
                <h3 class="text-2xl font-bold mb-6 text-blue-400 border-b border-white/10 pb-4">Administration</h3>
                <p class="text-slate-300 leading-relaxed mb-8 font-light text-sm">
                    Gérez vos ministères pour partager la vision et engager la communauté.
                </p>
                
                <div class="space-y-6">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-blue-400">
                            <i class="ph-fill ph-heart text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Cœur du Ministère</h4>
                            <p class="text-xs text-slate-400 mt-1">Définissez clairement votre mission.</p>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-green-400">
                            <i class="ph-fill ph-image text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Visuel Inspirant</h4>
                            <p class="text-xs text-slate-400 mt-1">Attirez l'attention avec une belle image.</p>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-yellow-400">
                            <i class="ph-fill ph-clock text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Horaires</h4>
                            <p class="text-xs text-slate-400 mt-1">Soyez précis sur les rencontres.</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="relative z-10 mt-12 pt-6 border-t border-white/10 hover:text-white group">
                <a href="/ministries" class="inline-flex items-center gap-2 text-slate-400 group-hover:text-blue-300 transition text-sm font-medium">
                    <i class="ph-bold ph-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la liste
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <div class="w-full md:w-2/3 p-8 md:p-12 overflow-y-auto max-h-[90vh]">
            <div class="mb-10 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-slate-800">
                        <%= ministry.id ? 'Modifier le ministère' : 'Nouveau ministère' %>
                    </h2>
                    <p class="text-sm text-slate-500 mt-1">Mettez à jour les informations ci-dessous.</p>
                </div>
                <!-- Status Badge -->
                <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider <%= ministry.id ? 'bg-blue-100 text-blue-700' : 'bg-green-100 text-green-700' %>">
                    <%= ministry.id ? 'Édition' : 'Création' %>
                </span>
            </div>
            
            <form action="<%= ministry.id ? '/ministries/update/' + ministry.id : '/ministries/create' %>" method="POST" class="space-y-8">
                
                <!-- Section 1: Quoi -->
                <div class="space-y-5">
                    <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest border-b border-slate-100 pb-2 flex items-center gap-2">
                        <i class="ph-fill ph-info text-blue-500"></i> Informations Principales
                    </h4>
                    
                    <div class="grid grid-cols-1 gap-5">
                        <!-- Nom -->
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Nom du Ministère</label>
                            <div class="relative group">
                                <input type="text" name="name" value="<%= ministry.name || '' %>" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition font-medium text-slate-700" placeholder="Ex: Ministère de la Jeunesse" required>
                                <i class="ph-bold ph-text-t absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                            </div>
                        </div>

                         <!-- Description Courte -->
                         <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-1">Description Courte</label>
                            <div class="relative group">
                                <input type="text" name="short_description" value="<%= ministry.short_description || '' %>" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition font-medium text-slate-700" placeholder="Une phrase d'accroche (ex: S'investir et servir)" required>
                                <i class="ph-bold ph-tag absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 2: Détails -->
                <div class="space-y-5">
                    <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest border-b border-slate-100 pb-2 flex items-center gap-2">
                        <i class="ph-fill ph-article text-blue-500"></i> Détails & Horaires
                    </h4>
                    
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Description Complète</label>
                        <div class="relative group">
                            <textarea name="description" rows="5" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition text-slate-600 resize-none" placeholder="Décrivez la vision, les activités et l'objectif du ministère..."><%= ministry.description || '' %></textarea>
                            <i class="ph-bold ph-pencil-simple absolute left-3.5 top-5 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                        </div>
                    </div>

                    <!-- Horaires -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">Horaires des rencontres</label>
                        <div class="relative group">
                            <input type="text" name="schedule" value="<%= ministry.schedule || '' %>" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition font-medium text-slate-700" placeholder="Ex: Tous les vendredis à 19h00">
                            <i class="ph-bold ph-clock absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                        </div>
                    </div>
                </div>

                 <!-- Section 3: Visuel -->
                 <div class="space-y-5">
                    <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest border-b border-slate-100 pb-2 flex items-center gap-2">
                        <i class="ph-fill ph-image text-blue-500"></i> Visuel
                    </h4>
                    
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-1">URL de l'image (Bannière)</label>
                        <div class="relative group">
                            <input type="url" name="image_url" id="image_url" value="<%= ministry.image_url || '' %>" class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-primary/20 focus:border-primary transition font-medium text-slate-700 text-sm" placeholder="https://...">
                            <i class="ph-bold ph-link absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors"></i>
                        </div>
                        <p class="text-xs text-slate-400 mt-2">L'image sera affichée en grand format.</p>
                    </div>

                    <!-- Image Preview -->
                    <div id="image-preview-container" class="mt-4 rounded-xl overflow-hidden bg-slate-100 border-2 border-dashed border-slate-200 aspect-video flex items-center justify-center relative group">
                        <img id="image-preview" src="<%= ministry.image_url || '' %>" class="<%= ministry.image_url ? '' : 'hidden' %> w-full h-full object-cover">
                        <div id="image-placeholder" class="<%= ministry.image_url ? 'hidden' : 'flex' %> flex-col items-center justify-center text-slate-400">
                            <i class="ph-duotone ph-image text-4xl mb-2"></i>
                            <span class="text-sm">Aperçu de l'image</span>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="pt-6 flex items-center justify-end gap-4 border-t border-slate-100 mt-8">
                    <a href="/ministries" class="px-6 py-3 rounded-xl text-slate-500 font-bold hover:bg-slate-100 transition">Annuler</a>
                    <button type="submit" class="px-8 py-3 bg-primary hover:bg-slate-800 text-white font-bold rounded-xl shadow-lg shadow-blue-900/20 transform hover:-translate-y-1 transition-all flex items-center gap-2">
                        <i class="ph-bold ph-check"></i>
                        <%= ministry.id ? 'Mettre à jour' : 'Créer le ministère' %>
                    </button>
                </div>

            </form>
        </div>
    </div>
</main>

<script>
    // Simple script to handle live image preview
    const imageUrlInput = document.getElementById('image_url');
    const imagePreview = document.getElementById('image-preview');
    const imagePlaceholder = document.getElementById('image-placeholder');

    imageUrlInput.addEventListener('input', function() {
        const url = this.value;
        if (url) {
            imagePreview.src = url;
            imagePreview.classList.remove('hidden');
            imagePlaceholder.classList.add('hidden');
            
            // Handle error if image doesn't load
            imagePreview.onerror = function() {
                this.classList.add('hidden');
                imagePlaceholder.classList.remove('hidden');
            }
        } else {
            imagePreview.classList.add('hidden');
            imagePlaceholder.classList.remove('hidden');
        }
    });
</script>

<%- include('partials/footer') %>