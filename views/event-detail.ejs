<%- include('partials/header', { title: event.title }) %>

    <!-- HEADER PAGE -->
    <header class="bg-primary pt-32 pb-20 text-center text-white relative">
        <div class="max-w-4xl mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4"><%= event.title %></h1>
            
            <div class="flex flex-col items-center justify-center gap-4 mt-4">
                <a href="/events" class="inline-flex items-center gap-2 text-slate-300 hover:text-white transition">
                    <i class="ph-bold ph-arrow-left"></i> Retour à l'agenda
                </a>

                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="flex items-center gap-3 mt-4">
                        <a href="/events/edit/<%= event.id %>" class="inline-flex items-center gap-2 bg-white text-primary px-5 py-2 rounded-full font-bold shadow-lg hover:bg-blue-50 transition transform hover:-translate-y-0.5 text-sm">
                            <i class="ph-bold ph-pencil-simple"></i> Modifier
                        </a>
                        <button onclick="openDeleteModal()" class="inline-flex items-center gap-2 bg-red-500/20 text-red-200 border border-red-500/50 px-5 py-2 rounded-full font-bold hover:bg-red-500 hover:text-white transition transform hover:-translate-y-0.5 text-sm">
                            <i class="ph-bold ph-trash"></i> Supprimer
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </header>

    <section class="py-16 bg-white min-h-screen">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <div class="bg-white rounded-2xl shadow-lg border border-slate-100 overflow-hidden">
                <% if (event.image_url) { %>
                    <div class="h-64 md:h-96 w-full relative">
                        <img src="<%= event.image_url %>" alt="<%= event.title %>" class="w-full h-full object-cover">
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-lg px-4 py-2 text-primary font-bold shadow-sm">
                            <%= event.category || 'Événement' %>
                        </div>
                    </div>
                <% } else { %>
                    <div class="h-48 w-full bg-slate-800 flex items-center justify-center relative">
                        <i class="ph-fill ph-calendar text-slate-600 text-6xl"></i>
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-lg px-4 py-2 text-primary font-bold shadow-sm">
                            <%= event.category || 'Événement' %>
                        </div>
                    </div>
                <% } %>

                <div class="p-8 md:p-12">
                    <div class="flex flex-col md:flex-row gap-8 mb-8 border-b border-slate-100 pb-8">
                        <div class="flex items-start gap-4 text-slate-600">
                            <div class="w-12 h-12 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center text-xl flex-shrink-0">
                                <i class="ph-fill ph-calendar"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-primary mb-1">Date</h3>
                                <p class="text-lg">
                                    <%= new Date(event.date_event).toLocaleDateString('fr-FR', {
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4 text-slate-600">
                             <div class="w-12 h-12 rounded-full bg-amber-50 text-amber-600 flex items-center justify-center text-xl flex-shrink-0">
                                <i class="ph-fill ph-clock"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-primary mb-1">Heure</h3>
                                <p class="text-lg">
                                    <%= new Date(event.date_event).toLocaleTimeString('fr-FR', {
                                        hour: '2-digit', 
                                        minute:'2-digit'
                                    }) %>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4 text-slate-600">
                            <div class="w-12 h-12 rounded-full bg-green-50 text-green-600 flex items-center justify-center text-xl flex-shrink-0">
                                <i class="ph-fill ph-map-pin"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-primary mb-1">Lieu</h3>
                                <p class="text-lg"><%= event.location %></p>
                            </div>
                        </div>
                    </div>

                    <div class="prose prose-lg max-w-none text-slate-600">
                        <h2 class="text-2xl font-bold text-primary mb-4">À propos de cet événement</h2>
                        <p><%= event.description %></p>
                        <!-- 
                            Si la description contenait du HTML ou des sauts de ligne, on pourrait utiliser <%- event.description %> 
                            ou traiter les sauts de ligne. Pour l'instant, on assume du texte brut.
                        -->
                    </div>

                    <div class="mt-12 pt-8 border-t border-slate-100 flex justify-center">
                        <a href="/contact" class="btn bg-accent text-white px-8 py-3 rounded-full hover:bg-accentHover transition shadow-md">
                            Nous contacter pour plus d'infos
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Modal de confirmation de suppression -->
    <% if (typeof user !== 'undefined' && user) { %>
        <div id="deleteModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-slate-900/60 backdrop-blur-sm transition-opacity opacity-0">
            <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 transform scale-95 transition-transform duration-200" id="deleteModalContent">
                <div class="text-center">
                    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4 text-red-600">
                        <i class="ph-bold ph-trash text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-2">Confirmer la suppression</h3>
                    <p class="text-slate-500 mb-6">Êtes-vous sûr de vouloir supprimer cet événement ? Cette action est irréversible.</p>
                    <div class="flex gap-3 justify-center">
                        <button onclick="closeDeleteModal()" class="px-5 py-2.5 rounded-xl border border-slate-200 text-slate-700 font-semibold hover:bg-slate-50 transition">Annuler</button>
                        <form action="/events/delete/<%= event.id %>" method="POST">
                            <button type="submit" class="px-5 py-2.5 rounded-xl bg-red-600 text-white font-semibold hover:bg-red-700 shadow-lg shadow-red-200 transition">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('deleteModalContent');

            function openDeleteModal() {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                setTimeout(() => {
                    modal.classList.remove('opacity-0');
                    modalContent.classList.remove('scale-95');
                    modalContent.classList.add('scale-100');
                }, 10);
            }

            function closeDeleteModal() {
                modal.classList.add('opacity-0');
                modalContent.classList.remove('scale-100');
                modalContent.classList.add('scale-95');
                setTimeout(() => {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                }, 300);
            }

            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeDeleteModal();
                }
            });
        </script>
    <% } %>

<%- include('partials/footer') %>
