<%- include('partials/header', { title: sermon.id ? 'Modifier le sermon' : 'Nouveau sermon' }) %>

<main class="bg-gray-50 min-h-screen py-12 md:py-20 flex items-center justify-center px-4">
    <div class="max-w-6xl w-full bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">
        
        <!-- Sidebar / Context info (Desktop only) -->
        <div class="hidden md:flex md:w-1/3 bg-slate-900 text-white p-10 relative flex-col justify-between">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10 pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
            
            <div class="relative z-10">
                <h3 class="text-2xl font-bold mb-6 text-blue-400 border-b border-white/10 pb-4">Administration</h3>
                <p class="text-slate-300 leading-relaxed mb-8 font-light text-sm">
                    Gérez la médiathèque de l'église. Ajoutez les enregistrements des cultes et enseignements.
                </p>
                
                <div class="space-y-6">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-red-500">
                            <i class="ph-fill ph-youtube-logo text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Lien Vidéo</h4>
                            <p class="text-xs text-slate-400 mt-1">Utilisez l'ID ou l'URL YouTube embed.</p>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0 text-amber-400">
                            <i class="ph-fill ph-microphone-stage text-xl"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-sm">Prédicateur</h4>
                            <p class="text-xs text-slate-400 mt-1">Indiquez qui a apporté le message.</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="relative z-10 mt-12 pt-6 border-t border-white/10 hover:text-white group">
                <a href="/media" class="inline-flex items-center gap-2 text-slate-400 group-hover:text-blue-300 transition text-sm font-medium">
                    <i class="ph-bold ph-arrow-left group-hover:-translate-x-1 transition-transform"></i> Retour à la Médiathèque
                </a>
            </div>
        </div>

        <!-- Form Section -->
        <div class="w-full md:w-2/3 p-8 md:p-12 overflow-y-auto max-h-[90vh]">
            <div class="mb-10 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-slate-800">
                        <%= sermon.id ? 'Modifier le sermon' : 'Nouveau sermon' %>
                    </h2>
                    <p class="text-slate-500 text-sm mt-1">Remplissez les détails ci-dessous.</p>
                </div>
                <% if (sermon.id) { %>
                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">Mode Édition</span>
                <% } else { %>
                    <span class="bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">Mode Création</span>
                <% } %>
            </div>

            <form action="<%= sermon.id ? '/sermons/update/' + sermon.id : '/sermons/create' %>" method="POST" class="space-y-6">
                
                <!-- Titre -->
                <div>
                    <label for="title" class="block text-sm font-medium text-slate-700 mb-2">Titre du message</label>
                    <input type="text" id="title" name="title" required
                           value="<%= sermon.title || '' %>"
                           class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm placeholder-slate-400"
                           placeholder="Ex: La puissance de l'espoir">
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Prédicateur -->
                    <div>
                        <label for="preacher" class="block text-sm font-medium text-slate-700 mb-2">Prédicateur</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                                <i class="ph-bold ph-user"></i>
                            </div>
                            <input type="text" id="preacher" name="preacher"
                                   value="<%= sermon.preacher || '' %>"
                                   class="w-full pl-10 px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                                   placeholder="Ex: Jean Dupont">
                        </div>
                    </div>

                    <!-- Série -->
                    <div>
                        <label for="series" class="block text-sm font-medium text-slate-700 mb-2">Série (Optionnel)</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                                <i class="ph-bold ph-folder-open"></i>
                            </div>
                            <input type="text" id="series" name="series"
                                   value="<%= sermon.series || '' %>"
                                   class="w-full pl-10 px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                                   placeholder="Ex: Évangile de Marc">
                        </div>
                    </div>

                    <!-- Catégorie -->
                    <div>
                        <label for="category" class="block text-sm font-medium text-slate-700 mb-2">Catégorie</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                                <i class="ph-bold ph-tag"></i>
                            </div>
                            <select id="category" name="category" class="w-full pl-10 px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm bg-white">
                                <option value="Enseignements" <%= (sermon.category === 'Enseignements' || !sermon.category) ? 'selected' : '' %>>Enseignements</option>
                                <option value="Cultes" <%= sermon.category === 'Cultes' ? 'selected' : '' %>>Cultes</option>
                                <option value="Événements" <%= sermon.category === 'Événements' ? 'selected' : '' %>>Événements</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Date -->
                    <div>
                        <label for="date_preached" class="block text-sm font-medium text-slate-700 mb-2">Date</label>
                        <input type="date" id="date_preached" name="date_preached" required
                               value="<%= sermon.date_preached ? new Date(sermon.date_preached).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>"
                               class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm">
                    </div>

                    <!-- Durée -->
                    <div>
                        <label for="duration" class="block text-sm font-medium text-slate-700 mb-2">Durée (Optionnel)</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                                <i class="ph-bold ph-clock"></i>
                            </div>
                            <input type="text" id="duration" name="duration"
                                   value="<%= sermon.duration || '' %>"
                                   class="w-full pl-10 px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                                   placeholder="Ex: 45 min">
                        </div>
                    </div>
                </div>

                <!-- URL Vidéo -->
                <div>
                    <label for="video_url" class="block text-sm font-medium text-slate-700 mb-2">URL YouTube (Embed/Watch)</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                            <i class="ph-bold ph-link"></i>
                        </div>
                        <input type="url" id="video_url" name="video_url"
                               value="<%= sermon.video_url || '' %>"
                               class="w-full pl-10 px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm font-mono text-sm"
                               placeholder="Ex: https://www.youtube.com/embed/VIDEO_ID">
                    </div>
                    <p class="text-xs text-slate-500 mt-2">
                        Conseil : Utilisez le lien format "embed" pour une meilleure compatibilité (ex: https://www.youtube.com/embed/pslT_pva2I).
                    </p>
                </div>
                
                <!-- URL Audio (Optionnel) -->
                <div>
                    <label for="audio_url" class="block text-sm font-medium text-slate-700 mb-2">URL Audio / Podcast (Optionnel)</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                            <i class="ph-bold ph-headphones"></i>
                        </div>
                        <input type="url" id="audio_url" name="audio_url"
                               value="<%= sermon.audio_url || '' %>"
                               class="w-full pl-10 px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm font-mono text-sm"
                               placeholder="Ex: lien vers le fichier mp3">
                    </div>
                </div>

                <!-- Description -->
                <div>
                    <label for="description" class="block text-sm font-medium text-slate-700 mb-2">Description / Résumé</label>
                    <textarea id="description" name="description" rows="4"
                              class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm placeholder-slate-400"
                              placeholder="Un bref résumé du message..."><%= sermon.description || '' %></textarea>
                </div>

                <!-- Submit Button -->
                <div class="pt-6 border-t border-slate-100 flex items-center justify-end gap-4">
                    <a href="/media" class="px-6 py-3 rounded-lg text-slate-600 hover:bg-slate-100 font-medium transition">Annuler</a>
                    <button type="submit" class="px-8 py-3 rounded-lg bg-blue-600 text-white font-bold hover:bg-blue-700 shadow-lg shadow-blue-200 transition transform hover:-translate-y-0.5 flex items-center gap-2">
                        <i class="ph-bold ph-check"></i>
                        <%= sermon.id ? 'Mettre à jour' : 'Publier le sermon' %>
                    </button>
                </div>

            </form>
        </div>
    </div>
</main>

<%- include('partials/footer') %>